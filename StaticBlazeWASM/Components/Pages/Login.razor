@page "/login"

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center">Login</h2>
        <form class="mt-4">
            <label class="block">
                <span class="text-gray-700">Username</span>
                <input type="text" class="mt-1 block w-full p-2 border rounded-lg">
            </label>
            <label class="block mt-4">
                <span class="text-gray-700">Password</span>
                <input type="password" class="mt-1 block w-full p-2 border rounded-lg">
            </label>
            <button type="submit" class="w-full mt-4 p-2 bg-blue-500 text-white rounded-lg">Login</button>
        </form>
    </div>
</div>

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold">Welcome to the Blog</h1>
    <SearchBar />
    <Blogs />
</div>

/* Blogs.razor */
<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    @foreach (var blog in BlogPosts)
    {
        <div class="p-4 bg-white rounded-lg shadow-md">
            <h2 class="text-xl font-bold">@blog.Title</h2>
            <p class="text-gray-600">@blog.ShortDescription</p>
        </div>
    }
</div>

/* SearchBar.razor */
<input type="text" placeholder="Search..." class="w-full p-2 border rounded-lg" />


