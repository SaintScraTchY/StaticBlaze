@page "/login"

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-md bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white text-center">Login</h2>

        <form @onsubmit="HandleLogin">
            <div class="mt-4">
                <label class="block text-gray-700 dark:text-gray-300">GitHub Token</label>
                <input type="password" @bind="GitHubToken" class="w-full px-4 py-2 mt-2 border rounded-lg dark:bg-gray-700 dark:text-white" required />
            </div>

            <div class="mt-4">
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg">Login</button>
            </div>
        </form>
    </div>
</div>
