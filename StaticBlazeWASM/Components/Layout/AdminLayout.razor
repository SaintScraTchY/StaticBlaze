@inherits LayoutComponentBase
@using Blazorise.Animate

<div class="overflow-x-hidden @(_isDarkMode ? "dark" : "") min-h-screen bg-gradient-to-br from-gray-50 via-gray-100 to-gray-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 transition-all duration-400">
    <!-- Sidebar -->
    <aside class="@($"fixed inset-y-0 left-0 {(_isSidebarOpen ? "w-72" : "w-20")} bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl transform transition-all duration-500 ease-in-out shadow-lg z-50 flex flex-col border-r border-gray-200/50 dark:border-gray-700/50 overflow-x-hidden")">
        <!-- Logo & Toggle -->
        <Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(1)">
            <!-- Logo & Toggle -->
            <div class="h-16 flex items-center justify-between px-4 border-b border-gray-200/50 dark:border-gray-700/50">
                <div class="flex items-center space-x-2 transition-all duration-300 ease-in-out">
                @if (_isSidebarOpen)
                {
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-violet-600 to-indigo-600 flex items-center justify-center">
                        <span class="text-white font-bold text-lg">SB</span>
                    </div>
                    <span class="@($"text-lg font-semibold text-gray-900 dark:text-white transform transition-all duration-500 ease-in-out {(_isSidebarOpen ? "opacity-100 translate-x-0" : "opacity-0 -translate-x-4 absolute")}")">
                        Panel
                    </span>
                }
                </div>
                <button @onclick="ToggleSidebar" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 transform transition-transform duration-500 @(_isSidebarOpen ? "" : "rotate-180")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
        </div>
        </Animate>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4 px-3 overflow-x-hidden">
            <div class="space-y-2 overflow-x-hidden">
                <NavLink href="/admin/dashboard" class="@GetNavLinkClass" Match="NavLinkMatch.All">
                    <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    @if (_isSidebarOpen)
                    {
                        <span class="@($"transform transition-all duration-300 ease-in-out {(_isSidebarOpen ? "opacity-100 translate-x-0" : "opacity-0 -translate-x-4 absolute")}")">
                            Dashboard
                        </span>
                    }
                    </div>
                </NavLink>

                <NavLink href="/admin/posts" class="@GetNavLinkClass">
                    <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"/>
                    </svg>
                    @if (_isSidebarOpen)
                    {
                        <span class="@($"transform transition-all duration-300 ease-in-out {(_isSidebarOpen ? "opacity-100 translate-x-0" : "opacity-0 -translate-x-4 absolute")}")">
                            Posts
                        </span>
                    }
                    </div>
                </NavLink>

                <NavLink href="/admin/media" class="@GetNavLinkClass">
                    <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    @if (_isSidebarOpen)
                    {
                        <span class="@($"transform transition-all duration-300 ease-in-out {(_isSidebarOpen ? "opacity-100 translate-x-0" : "opacity-0 -translate-x-4 absolute")}")">
                            Media
                        </span>
                    }
                    </div>
                </NavLink>
            </div>
        </nav>

        <!-- Bottom Actions -->
        <div class="p-4 border-t border-gray-200/50 dark:border-gray-700/50 space-y-2">
            <button @onclick="ToggleDarkMode" class="@GetNavLinkClass">
                @if (_isDarkMode)
                {
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                }
                else
                {
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                    </svg>
                }
                @if (_isSidebarOpen)
                {
                    <span>@(_isDarkMode ? "Light Mode" : "Dark Mode")</span>
                }
            </button>

            <button @onclick="Logout" class="@GetNavLinkClass">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                @if (_isSidebarOpen)
                {
                    <span>Logout</span>
                }
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="@(_isSidebarOpen ? "ml-72" : "ml-20") transform transition-all duration-300 ease-in-out p-6">
        @Body
    </main>
</div>

