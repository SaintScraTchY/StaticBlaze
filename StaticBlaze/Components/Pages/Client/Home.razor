@page "/"

<PageTitle>Home</PageTitle>

<!-- Hero Section with Animated Background -->
<div class="relative min-h-screen overflow-hidden bg-gray-50 dark:bg-gray-900">
    <!-- Animated Background Gradients -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -inset-[10px] opacity-50">
            <div class="absolute top-0 -left-4 w-72 h-72 bg-purple-300 dark:bg-purple-700 rounded-full mix-blend-multiply dark:mix-blend-soft-light filter blur-xl animate-blob"></div>
            <div class="absolute top-0 -right-4 w-72 h-72 bg-yellow-300 dark:bg-yellow-700 rounded-full mix-blend-multiply dark:mix-blend-soft-light filter blur-xl animate-blob animation-delay-2000"></div>
            <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-300 dark:bg-pink-700 rounded-full mix-blend-multiply dark:mix-blend-soft-light filter blur-xl animate-blob animation-delay-4000"></div>
        </div>
    </div>

    <!-- Content Container -->
    <div class="relative">
        <!-- Hero Content -->
        <div class="container mx-auto px-6 pt-32 pb-20">
            <div class="backdrop-blur-lg bg-white/30 dark:bg-gray-800/30 rounded-3xl p-8 md:p-12 shadow-2xl border border-white/20 dark:border-gray-700/20">
                <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent animate-gradient">
                    Welcome to My Blog
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl">
                    Exploring ideas, sharing knowledge, and building the future through technology and creativity.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="/blogs" class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        Read Blog Posts
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                    <a href="/about" class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-gray-700 dark:text-gray-200 bg-white/50 dark:bg-gray-800/50 rounded-lg border border-gray-200/50 dark:border-gray-700/50 hover:bg-white/70 dark:hover:bg-gray-800/70 transform hover:-translate-y-0.5 transition-all duration-200">
                        About Me
                    </a>
                </div>
            </div>

            <!-- Featured Section -->
            <div class="mt-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Featured Post Cards -->
                <div class="backdrop-blur-lg bg-white/30 dark:bg-gray-800/30 rounded-xl p-6 shadow-xl border border-white/20 dark:border-gray-700/20 transform hover:-translate-y-1 transition-all duration-200">
                    <span class="inline-block px-3 py-1 mb-4 text-sm font-semibold text-purple-600 bg-purple-100 dark:text-purple-300 dark:bg-purple-900/30 rounded-full">Featured</span>
                    <h3 class="text-xl font-bold mb-2 text-gray-800 dark:text-gray-100">Getting Started with Blazor</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">Learn how to build modern web applications with Blazor WebAssembly.</p>
                    <a href="/blog/getting-started" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
                        Read More
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>

                <div class="backdrop-blur-lg bg-white/30 dark:bg-gray-800/30 rounded-xl p-6 shadow-xl border border-white/20 dark:border-gray-700/20 transform hover:-translate-y-1 transition-all duration-200">
                    <span class="inline-block px-3 py-1 mb-4 text-sm font-semibold text-blue-600 bg-blue-100 dark:text-blue-300 dark:bg-blue-900/30 rounded-full">Tutorial</span>
                    <h3 class="text-xl font-bold mb-2 text-gray-800 dark:text-gray-100">Tailwind CSS Magic</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">Master the art of building beautiful interfaces with Tailwind CSS.</p>
                    <a href="/blog/tailwind-css" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
                        Read More
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>

                <div class="backdrop-blur-lg bg-white/30 dark:bg-gray-800/30 rounded-xl p-6 shadow-xl border border-white/20 dark:border-gray-700/20 transform hover:-translate-y-1 transition-all duration-200">
                    <span class="inline-block px-3 py-1 mb-4 text-sm font-semibold text-green-600 bg-green-100 dark:text-green-300 dark:bg-green-900/30 rounded-full">Tips</span>
                    <h3 class="text-xl font-bold mb-2 text-gray-800 dark:text-gray-100">Web Development Best Practices</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">Essential tips and tricks for modern web development.</p>
                    <a href="/blog/best-practices" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
                        Read More
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

