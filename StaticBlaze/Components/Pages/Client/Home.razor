@page "/"
@using StaticBlaze.Components.Components

<PageTitle>Blog</PageTitle>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-800 dark:to-purple-800">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20 backdrop-blur-xl"></div>
        </div>
        <div class="relative max-w-7xl mx-auto py-24 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
                    Discover. Learn. Grow.
                </h2>
                <p class="mt-6 max-w-2xl mx-auto text-xl text-blue-100">
                    Exploring the depths of technology, one post at a time.
                </p>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        @if (Loading)
        {
            <!-- Featured Post Skeleton -->
            <div class="grid md:grid-cols-2 gap-8 mb-12">
                @for (var i = 0; i < 2; i++)
                {
                    <PostCard Loading="true" />
                }
            </div>
        }
        else
        {
            <!-- Featured Posts -->
            @if (FeaturedPosts.Any())
            {
                <section class="mb-16">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                            <i class="fas fa-star text-yellow-400 mr-2"></i>
                            Featured Posts
                        </h2>
                    </div>
                    <div class="grid md:grid-cols-2 gap-8">
                        @foreach (var post in FeaturedPosts)
                        {
                            <PostCard Post="post" />
                        }
                    </div>
                </section>
            }

            <!-- Latest Posts -->
            <section class="mb-16">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                        <i class="fas fa-clock text-blue-500 mr-2"></i>
                        Latest Posts
                    </h2>
                    <a href="/posts" class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition-colors">
                        View All
                        <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var post in LatestPosts)
                    {
                        <PostCard Post="post" />
                    }
                </div>
            </section>

            <!-- Categories -->
            <section>
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
                    <i class="fas fa-folder text-purple-500 mr-2"></i>
                    Categories
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    @foreach (var category in Categories)
                    {
                        <a href="/category/@category.Key" class="group relative overflow-hidden rounded-xl">
                            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/80 to-purple-600/80 group-hover:scale-105 transition-transform duration-300"></div>
                            <div class="relative p-6">
                                <h3 class="text-xl font-semibold text-white">@category.Key</h3>
                                <p class="text-white/80">@category.Value posts</p>
                            </div>
                        </a>
                    }
                </div>
            </section>
        }
    </div>
</div>

